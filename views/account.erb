<html>
  <head>
    <link rel="stylesheet" href="/style.css" />
  </head>
  
  <body>
    <div>
      <img class="chitter_logo" src="/chitter_logo.webp" alt="Chitter Logo" />
    </div>   

    <div class="topnav">
      <a><% unless @maker.nil? %><form class method="post" action="/logout">
      <input type="submit" value="Log Out" class="logout_btn"></form><%end%></a>
      <a class="active" href="/">Home</a>
    </div>

    <div>
      <h1 align='center'>Welcome <%= @maker.name%>!</h1>
    </div>

    <div>
      <h2>This is the list of all the peeps</h2>
     <div>
      <% @peeps.reverse_each do |peep| %>
        <div class="w3-container">
          <div class="last_peeps">
            <%= peep.title %>
            <%= peep.time %>
            <%= peep.maker_id %>
            <%= peep.content %>
          </div>
        </div>
      <% end %>
    </div>
    </div>
  </body>
</html>