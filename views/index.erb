<html>
  <link rel="stylesheet" href="/style.css" />
  <head>
  </head>

  <body>
    <div class="title">
      <h1>Chitter</h1>
    </div>      
    
    <div class="subtitle">
      <h3>Welcome to Chitter!</h3>
    </div>

    <div class="">
      <a href='/signup'>Sign Up</a>
      <%# <a href='/login'>Log In</a> %>
      <%# <a href='/post'>Post a peep</a> %>
    </div>

    <div>
      <p>These are the last 3 peeps:</p>
    </div>

    <div>
      <% @peeps.last(3).reverse_each do |peep| %>
        <div class="w3-container">
          <div class="last_peeps">
            <%= peep.title %>
            <%= peep.time %>
            <%= peep.maker_id %>
            <%= peep.content %>
          </div>
        </div>
      <% end %>
    </div>
    
  </body>

</html>