<html>
  <head>
    <link rel="stylesheet" href="/style.css" />
  </head>

  <body>
    <div>
      <img class="chitter_logo" src="/chitter_logo.webp" alt="Chitter Logo" />
    </div>   

    <div class="topnav">
      <a><% unless @maker.nil? %><form class method="post" action="/logout">
      <input type="submit" value="Log Out" class="logout_btn"></form><%end%></a>
      <a href="/">Home</a>
      <% unless @maker.nil? %><a href="/account">Account</a><%end%>
      <% if @maker.nil? %><%= '<a href="/login">Log In</a>' %><%end%>
      <% if @maker.nil? %><%= '<a href="/signup">Sign Up</a>' %><%end%>
    </div>
   
    
    <div class="subtitle">
      <h1>Welcome to Chitter<% unless @maker.nil? %><%= " #{@maker.name}" %><%end%>!</h1>
    </div>

    <div>
      <h2>These are the last 3 peeps:</h2>
    </div>

    <% @peeps.last(3).reverse_each do |peep| %>
      <div class="peep_list">
        <%= peep.title %>
        <%= peep.time %>
        <%= peep.maker_id %>
        <%= peep.content %>
      </div>
    <% end %>
    </div>
  </body>
</html>